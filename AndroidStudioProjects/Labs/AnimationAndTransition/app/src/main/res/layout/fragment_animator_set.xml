<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/image_view_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_face_black_48dp"
        android:layout_above="@+id/title_band"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/title_band"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/cyan_500">

        <TextView
            android:id="@+id/text_view_title_band"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title Band"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearance"
            android:layout_below="@+id/text_view_title_band"
            android:text="detail band"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/track_band"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_band"
        android:background="@color/teal_500"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/text_view_track_band"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Track Band"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_track_band"
            android:textAppearance="?android:attr/textAppearance"
            android:text="detail track"/>

    </RelativeLayout>

    <Button
        android:id="@+id/button_animator_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_animator_set"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>