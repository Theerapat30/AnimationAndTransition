<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_green_500">

        <TextView
            android:id="@+id/text_view_title_band"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title Book"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearance"
            android:layout_below="@+id/text_view_title_band"
            android:text="detail book"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/track_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lime_500"
        android:layout_below="@id/title_book"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/text_view_track_band"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Track Book"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_track_band"
            android:textAppearance="?android:attr/textAppearance"
            android:text="detail track"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/lyrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/track_book"
        android:layout_margin="15dp"
        android:textColor="@color/colorPrimary"
        android:text="@string/lyrics"
        android:textAppearance="?android:attr/textAppearanceInverse" />

</RelativeLayout>